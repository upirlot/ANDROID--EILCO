<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alexandreexample.spacexapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/rocket"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".Views.MainActivity"
            android:label="SpaceXApp"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Views.MenuActivity"
            android:label="Menu"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Views.RocketActivity"
            android:label="Rocket"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Views.LaunchActivity"
            android:label="Launch"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Views.CapsuleActivity"
            android:label="Capsule"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Views.ShipActivity"
            android:label="Ship"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Views.ListActivity"
            android:label="List"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Views.ChoicesListActivity"
            android:label="List"
            android:screenOrientation="portrait"/>

    </application>

</manifest>